{
  "extends": ["tslint-eslint-rules", "tslint-config-prettier"],
  "rules": {
    "curly": true,
    "eofline": true,
    "align": [true, "parameters"],
    "class-name": true,
    "indent": [true, "spaces", 2],
    "max-line-length": [true, 150],
    "no-consecutive-blank-lines": true,
    "no-trailing-whitespace": true,
    "no-duplicate-variable": true,
    "no-console": [true, "log", "trace"],
    "no-construct": true,
    "no-debugger": true,
    "no-var-keyword": true,
    "no-empty": true,
    "no-eval": true,
    "no-var-requires": false,
    "no-require-imports": false,
    "no-shadowed-variable": true,
    "object-curly-spacing": true,
    "one-line": [true, "check-else", "check-whitespace", "check-open-brace"],
    "prefer-const": true,
    "quotemark": [true, "single", "avoid-escape", "jsx-single"],
    "semicolon": [true, "never"],
    "ter-prefer-arrow-callback": true,
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "use-isnan": true,
    "whitespace": [true, "check-branch", "check-decl", "check-operator", "check-separator", "check-type"],
    "comment-format": [true, "check-space", "check-lowercase"]
  }
}
