{
  "compilerOptions": {
    "target": "es6",
    "importHelpers": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "outDir": ".tmp",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "exclude": [
    "node_modules",
    "tools/build",
    "dist"
  ],
  "compileOnSave": false
}
